<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/iv_back_edit_profile"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="#000000"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Edit profile"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/iv_back_edit_profile"
            android:background="#DDDDDD" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_change_photo"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/ic_picture"
                app:tint="#000000"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_change_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Change photo"
                android:textColor="#000000"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_change_video"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:padding="8dp"
                android:src="@drawable/ic_picture"
                app:tint="#000000"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_change_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change video"
                android:textColor="#000000"
                android:textSize="13dp" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_change_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_btn_change_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawableTint="#a9a9a9"
            android:gravity="center"
            android:paddingStart="7dp"
            android:text="Rakhi Bhot"
            android:textColor="#a9a9a9"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_change_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="User Name"
            android:textColor="#000000"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_btn_change_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawableTint="#a9a9a9"
            android:gravity="center"
            android:paddingStart="7dp"
            android:text="rakhibhot"
            android:textColor="#a9a9a9"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_btn_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_copy"
            android:drawablePadding="6dp"

            android:drawableTint="#7C7C7C"
            android:gravity="center"
            android:paddingStart="7dp"
            android:text="tiktok.com/@rakhibhot"
            android:textColor="#a9a9a9"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_change_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Bio"
            android:textColor="#000000"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_btn_change_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawableTint="#a9a9a9"
            android:gravity="center"
            android:paddingStart="7dp"
            android:text="Add a bio to your profile"
            android:textColor="#a9a9a9"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_change_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Website"
            android:textColor="#000000"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_btn_change_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawableTint="#a9a9a9"
            android:gravity="center"
            android:paddingStart="7dp"
            android:text="Add your website"
            android:textColor="#a9a9a9"
            android:textSize="13dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="16dp"
        android:background="#F1F1F1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Instagram"
            android:textColor="#000000"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_btn_instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawableTint="#a9a9a9"
            android:gravity="center"
            android:paddingStart="7dp"
            android:text="Add instagram to your profile"
            android:textColor="#a9a9a9"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tv_youtube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Edit profile"
            android:textColor="#000000"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_btn_youtube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawableTint="#a9a9a9"
            android:gravity="center"
            android:paddingStart="7dp"
            android:text="Add youtube to your profile"
            android:textColor="#a9a9a9"
            android:textSize="13dp" />

    </RelativeLayout>
</LinearLayout>